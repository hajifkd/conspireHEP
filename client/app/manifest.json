{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.0.0",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://arxiv.org/list/*/recent",
        "http://xxx.lanl.gov/list/*/recent",
        "https://arxiv.org/list/*/recent",
        "https://xxx.lanl.gov/list/*/recent",
        "http://arxiv.org/list/*/new",
        "http://xxx.lanl.gov/list/*/new",
        "https://arxiv.org/list/*/new",
        "https://xxx.lanl.gov/list/*/new"
      ],
      "js": [
        "scripts/listPages.js"
      ],
      "css": [
        "styles/extension.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "http://arxiv.org/abs/*",
        "http://xxx.lanl.gov/abs/*",
        "https://arxiv.org/abs/*",
        "https://xxx.lanl.gov/abs/*"
      ],
      "js": [
        "scripts/absPages.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
